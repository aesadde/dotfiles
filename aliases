#Common aliases
alias lx='ls -laXB'          # Sort by extension.
alias lk='ls -laSr'          # Sort by size, biggest last.
alias lt='ls -latr'          # Sort by date, most recent last.
alias lc='ls -latcr'         # Sort by/show change time,most recent last.
alias lu='ls -latur'         # Sort by/show access time,most recent last.
alias la='ls -la -G'
alias lg='ls -la | grep'     # show only matching files/dirs
alias lcount='ls -1 | wc -l' # count number of files in dir
alias grep='grep --color=auto'
alias rm='rm -iv'
alias cp='cp -v'
alias mv='mv -v'

#faster cds
alias ..='cd ..'
alias dow='cd ~/Downloads'
alias cdot='cd ~/dotfiles'
alias notes='cd ~/notes && "$EDITOR" index.md'

#edit dots and vim
alias ev='nvim ~/dotfiles/nvim/init.vim'

#Git aliases (git specific aliases are in gitconfig)
alias g\?='git status'
alias tasks='ag -A 5 ":todo:|TODO|FIXME"'

#tmux aliases
alias tn='tmux new-session -s'
alias tml='tmux ls'
alias tma='tmux attach -t'
alias tnew='new-tmux-from-dir-name'

#stack
alias ghc='stack exec -- ghc'
alias ghci='stack exec -- ghci'
alias ydev='stack exec yesod devel'

## OS X
#hide/show .files
alias hiddentrue='defaults write com.apple.finder AppleShowAllFiles TRUE & killall Finder'
alias hiddenfalse='defaults write com.apple.finder AppleShowAllFiles FALSE & killall Finder'

#Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Faster Backups in El capitan
alias nothrottle='sudo sysctl debug.lowpri_throttle_enabled=0'
alias throttel='sudo sysctl debug.lowpri_throttle_enabled=1'

#K8s
alias klog='kubectl logs -f --tail 100'





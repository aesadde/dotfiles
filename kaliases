# Curated kubectl aliases (trimmed from 805 to ~50 essential aliases)
# For complex queries, type the full kubectl command

# === Core kubectl shortcuts ===
alias k='kubectl'
alias kx='kubectx'
alias kn='kubens'

# === Get resources ===
alias kg='kubectl get'
alias kgp='kubectl get pods'
alias kgd='kubectl get deployments'
alias kgs='kubectl get services'
alias kgi='kubectl get ingress'
alias kgc='kubectl get configmaps'
alias kgsec='kubectl get secrets'
alias kgn='kubectl get nodes'
alias kgns='kubectl get namespaces'
alias kgall='kubectl get all'
alias kgpv='kubectl get pv'
alias kgpvc='kubectl get pvc'
alias kgj='kubectl get jobs'
alias kgcj='kubectl get cronjobs'

# === Wide output (most useful) ===
alias kgpw='kubectl get pods -o wide'
alias kgdw='kubectl get deployments -o wide'
alias kgsw='kubectl get services -o wide'
alias kgnw='kubectl get nodes -o wide'

# === Watch resources ===
alias kgpwatch='kubectl get pods -w'
alias kgdwatch='kubectl get deployments -w'

# === All namespaces ===
alias kgpa='kubectl get pods --all-namespaces'
alias kgda='kubectl get deployments --all-namespaces'
alias kgsa='kubectl get services --all-namespaces'

# === Describe resources ===
alias kd='kubectl describe'
alias kdp='kubectl describe pod'
alias kdd='kubectl describe deployment'
alias kds='kubectl describe service'
alias kdn='kubectl describe node'
alias kdc='kubectl describe configmap'
alias kdsec='kubectl describe secret'

# === Logs ===
alias kl='kubectl logs -f'
alias klp='kubectl logs -f -p'
alias kl100='kubectl logs -f --tail=100'
alias kl500='kubectl logs -f --tail=500'

# === Exec into pods ===
alias kex='kubectl exec -it'
alias ksh='kubectl exec -it -- /bin/sh'
alias kbash='kubectl exec -it -- /bin/bash'

# === Apply/Delete ===
alias ka='kubectl apply -f'
alias kak='kubectl apply -k'
alias kk='kubectl kustomize'
alias kdel='kubectl delete'
alias kdelp='kubectl delete pod'
alias kdelf='kubectl delete -f'

# === Port forwarding ===
alias kpf='kubectl port-forward'

# === Context/Namespace ===
alias kctx='kubectl config current-context'
alias kctxs='kubectl config get-contexts'
alias kuse='kubectl config use-context'
alias kns='kubectl config view --minify --output "jsonpath={..namespace}"'

# === YAML/JSON output ===
alias kgpy='kubectl get pods -o yaml'
alias kgpj='kubectl get pods -o json'
alias kgdy='kubectl get deployment -o yaml'
alias kgsy='kubectl get service -o yaml'

# === Rollouts ===
alias kroll='kubectl rollout status'
alias krestart='kubectl rollout restart'
alias kundo='kubectl rollout undo'
alias khist='kubectl rollout history'

# === Resource management ===
alias ktop='kubectl top'
alias ktopn='kubectl top nodes'
alias ktopp='kubectl top pods'

# === Events (useful for debugging) ===
alias kge='kubectl get events --sort-by=.metadata.creationTimestamp'

# === Run ad-hoc pods ===
alias krun='kubectl run --rm --restart=Never --image-pull-policy=IfNotPresent -it'

# === kube-system namespace shortcuts ===
alias ksys='kubectl -n kube-system'
alias kgsysp='kubectl -n kube-system get pods'
alias kgsyss='kubectl -n kube-system get services'
alias kgsysd='kubectl -n kube-system get deployments'
